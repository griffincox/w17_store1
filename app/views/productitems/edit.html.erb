<!-- Validation failure messages -->
<% if @productitem.errors.any? %>
  <% @productitem.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Productitem #<%= @productitem.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_productitem/<%= @productitem.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for cart_id -->
      <div class="form-group">
        <label for="cart_id" class="control-label">
          Cart
        </label>

        <%= select_tag(:cart_id, options_from_collection_for_select(Cart.all, :id, :user_id, @productitem.cart_id), :class => "form-control") %>
      </div>

      <!-- Label and input for order_id -->
      <div class="form-group">
        <label for="order_id" class="control-label">
          Order
        </label>

        <%= select_tag(:order_id, options_from_collection_for_select(Order.all, :id, :name, @productitem.order_id), :class => "form-control") %>
      </div>

      <!-- Label and input for item_id -->
      <div class="form-group">
        <label for="item_id" class="control-label">
          Item
        </label>

        <%= select_tag(:item_id, options_from_collection_for_select(Item.all, :id, :name, @productitem.item_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Productitem
      </button>
      or
      <a href="/productitems/<%= @productitem.id %>">Cancel</a>
    </form>
  </div>
</div>
