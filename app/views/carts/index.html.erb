<div class="page-header">
  <h1>
    Carts
    <a href="/carts/new" class="btn btn-lg btn-success">New Cart</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.user.email %></td>
        <td>
          <a href="/carts/<%= cart.id %>" class="btn btn-primary">Show</a>
          <a href="/carts/<%= cart.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_cart/<%= cart.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
